---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Pricing from "@components/pricing.astro";
import { PRICING } from "config";
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc"
        >Simple & predictable pricing. No asterisks or surprises.</Fragment
      >
    </Sectionhead>

    <div class={`grid md:grid-cols-${PRICING.length} gap-10 mx-auto max-w-screen-lg mt-12`}>
      {PRICING.map((item) => <Pricing plan={item} />)}
    </div>
  </Container>
</Layout>
