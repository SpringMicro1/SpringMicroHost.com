---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingComponent from "@components/pricing.astro";
import { PRICING_CRM } from "config";
---

<Layout title="CRM Plans">
  <Container>
    <Sectionhead>
      <Fragment slot="title">CRM Plans</Fragment>
      <Fragment slot="desc"
        >Simple & predictable pricing. No asterisks or surprises.</Fragment
      >
    </Sectionhead>

    <PricingComponent PRICING={PRICING_CRM} />

  </Container>
</Layout>
